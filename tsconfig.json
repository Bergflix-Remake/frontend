{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@atoms/*": [
        "src/stories/atoms/*"
      ],
      "@cells/*": [
        "src/stories/cells/*"
      ],
      "@molecules/*": [
        "src/stories/molecules/*"
      ],
      "@organisms/*": [
        "src/stories/organisms/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
